<meta name="og:url" content="{{ site.url }}/{{ this.slug }}"> {{!-- TODO Improve the URLs here --}}
<meta name="og:title" content="{{#if this.title }}{{ title }}{{ else }}{{ site.title }}{{/if }}">
<meta name="og:description" content="{{#if this.excerpt }}{{ this.excerpt }}{{ else }}{{ site.description }}{{/if }}">
<meta name="og:site_name" content="{{ site.title }}">

{{#if this.date }}
  <meta name="article:published_time" content="{{ this.date }}">
{{/if }}
{{#equal template post.hbs }}
  <meta name="og:type" content="article">
  {{!-- meta(name="article:modified_time" content="{{ this.modified_time }}") --}}
  {{!-- <meta name="article:modified_time" content=""> --}}
  {{#within authors author }}
    <meta name="article:author" content="{{ site.author.name }}">
  {{/within }}
{{/equal }}
<meta name="twitter:site" content="@{{ site.author.social.twitter }}">
{{#if thumbnail }}
<meta name="twitter:card" content="summary_large_image">
<meta name="og:image" content="{{ site.url }}{{ thumbnail }}">
<meta name="twitter:image:src" content="{{ thumbnail }}">
{{ else }}
  <meta name="twitter:card" content="summary">
{{/if }}
