{
  "source": "./src",
  "destination": "./build",
  "metadata": {
    "title": "Lost Type Co-op Blog",
    "description": "Articles, resources, inspiration, and lessons learned by contributors to the Lost Type Co-op."
  },
  "plugins": {
    "metalsmith-collections": {
      "posts": {
        "pattern": "*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-tags": {
      "handle": "fonts",
      "path": "fonts-in-use/:tag/index.html",
      "template": "tag.hbt",
      "sortBy": "date",
      "reverse": true
    },
    "metalsmith-templates": {
      "engine": "handlebars",
      "directory": "_templates"
    },
    "metalsmith-imagemin": {
      "optimizationLevel": 3,
      "svgoPlugins": [{
        "removeViewBox": false
      }]
    },
    "metalsmith-sass": {
      "outputStyle": "compressed"
    },
    "metalsmith-watch": {
      "pattern": "**/*",
      "livereload": false
    },
    "metalsmith-serve": {
      "port": 8081,
      "verbose": true
    }
  }
}
