{
  "source": "./src",
  "destination": "./build",
  "clean": false,
  "metadata": {
    "title": "Lost Type Co-op Blog",
    "description": "Articles, resources, inspiration, and lessons learned by contributors to the Lost Type Co-op."
  },
  "plugins": {
    "metalsmith-collections": {
      "posts": {
        "pattern": "*-*-*.md",
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-collections-paginate": {
      "posts": {
        "perPage": 30,
        "template": "index.hbt",
        "first": "index.html",
        "path": "page/:num/index.html"
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-jekyll-dates": {},
    "metalsmith-tags": {
      "handle": "fonts",
      "path": "fonts-in-use/:tag/index.html",
      "template": "tag.hbt",
      "sortBy": "date",
      "reverse": true
    },
    "metalsmith-metadata": {
      "authors": "authors.json"
    },
    "metalsmith-register-helpers": {
      "directory": "_helpers"
    },
    "metalsmith-register-partials": {
      "directory": "_includes"
    },
    "metalsmith-handlebars-within": {},
    "metalsmith-templates": {
      "engine": "handlebars",
      "directory": "_templates"
    },
    "metalsmith-typogr": {},
    "metalsmith-permalinks": {
      "relative": false,
      "pattern": ":slug"
    }
  }
}
